<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dojo_survey_validation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dojo_survey_validation.styles.css" asp-append-version="true" />
</head>
<body>
    @model DojoSurvey
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <form action="form/create" method="post">
        <div class="mx-auto p-2" style="width: 500px;">
            <div class="d-flex p-2">
                <label class="text-center" asp-for="name">Your Name</label>
                <input asp-for="name" class="form-control border border-success p-2 mb-2" type="text" placeholder="Name" aria-label="default input example" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="d-flex p-2">
                <label class="text-center" asp-for="location">Dojo Location</label>
                <select asp-for="location" class="form-select form-select-sm border border-success p-2 mb-2" aria-label="Small select example">
                    <option value="San Jose">San Jose</option>
                    <option value="Canton">Canton</option>
                    <option value="Boston">Boston</option>
                </select>
            </div>
            <div class="d-flex p-2">
                <label class="text-center" asp-for="language">Favorite Language</label>
                <select asp-for="language" class="form-select form-select-sm border border-success p-2 mb-2" aria-label="Small select example">
                    <option value="Python/Flask">Python/Flask</option>
                    <option value="React/Mongoose">React/Mongoose</option>
                    <option value="C#/ASP.NET">C#/ASP.NET</option>
                </select>
            </div>
            <div class="d-flex p-2">
                <label asp-for="comment">Comment</label>
                <textarea asp-for="comment" class="form-control border border-success p-2 mb-2" id="exampleFormControlTextarea1" rows="3"></textarea>
                <span asp-validation-for="comment" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
